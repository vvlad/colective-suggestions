<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for(@user,url: 'nominees/create', html: { class: 'form-horizontal' }) do |f| %>
      <%= f.simple_fields_for :nominations do |ff| %>

        <div class="form-group">
          <%= ff.text_field :nominee, placeholder: "Nomination Name", class: 'form-control' %>
          <%= ff.text_field :specialty, placeholder: "Nomination Speciality", class: 'form-control' %>
        </div>

      <% end %>

       <%= f.submit "Save" ,:class=>"btn btn-success" %>
    <% end %>
  </div>
</div>
